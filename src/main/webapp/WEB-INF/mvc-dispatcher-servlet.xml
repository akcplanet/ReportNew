	<bean id="sdaDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${sda.datbase.driver}" />
		<property name="url" value="${sda.url}" />
		<property name="username" value="${sda.username}" />
		<property name="password" value="${sda.password}" />
		<property name="initialSize" value="3" />
		<property name="maxActive" value="2" />
		<property name="minIdle" value="2" />
		<property name="maxIdle" value="10" />
		<property name="maxWait" value="-1" />
		<property name="validationQuery" value="select 1" />
		<property name="testOnBorrow" value="true" />

	</bean>


	<bean id="sdaEntityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="SDADB" />
		<property name="dataSource" ref="sdaDataSource" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<property name="showSql" value="true" />
			</bean>
		</property>
	</bean>

	<bean id="sdaTxManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="sdaEntityManagerFactory" />
	</bean>


	<tx:advice id="sdaTxAdvice" transaction-manager="sdaTxManager">
		<tx:attributes>
			<tx:method name="save*" read-only="false" rollback-for="RuntimeException" />
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>


	<tx:annotation-driven transaction-manager="sdaTxManager" />

	<mvc:annotation-driven />
	<mvc:resources mapping="/resources/**" location="/resources/" />
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/resources/templates/</value>
		</property>
		<property name="suffix">
			<value>.html</value>
		</property>
	</bean>



</beans>